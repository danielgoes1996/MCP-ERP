# ============================================
# PostgreSQL Configuration Example
# ============================================
# Copy this file to .env after migration
#
# cp .env.postgres .env
# ============================================

# ============================================
# DATABASE - PostgreSQL (Production Ready)
# ============================================

# PostgreSQL Connection (Docker)
DATABASE_URL=postgresql://mcp_user:changeme_in_production@db:5432/mcp_system

# PostgreSQL Connection (Local)
# DATABASE_URL=postgresql://mcp_user:changeme_in_production@localhost:5432/mcp_system

# PostgreSQL Pool Settings (Optional)
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# ============================================
# DOCKER COMPOSE CONFIGURATION
# ============================================

POSTGRES_DB=mcp_system
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_PORT=5432

PGADMIN_EMAIL=admin@mcp.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

REDIS_PORT=6379
API_PORT=8000

# ============================================
# APPLICATION
# ============================================

ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# Security - CRITICAL: Change in production!
JWT_SECRET_KEY=generate-a-secure-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# EXTERNAL SERVICES
# ============================================

# OpenAI (for voice processing)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Vision API (for OCR)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json

# ============================================
# COMPANY INFORMATION
# ============================================

COMPANY_RFC=XAXX010101000
COMPANY_NAME=Mi Empresa SA de CV
COMPANY_EMAIL=facturacion@miempresa.com
COMPANY_PHONE=5555555555
COMPANY_ZIP=01000

# ============================================
# FEATURE FLAGS (Optional)
# ============================================

ENABLE_AI_FEATURES=true
ENABLE_VOICE_PROCESSING=true
ENABLE_AUTO_CATEGORIZATION=true
ENABLE_DUPLICATE_DETECTION=true
ENABLE_BANK_RECONCILIATION=true

# ============================================
# PERFORMANCE TUNING (Optional)
# ============================================

# Background task workers
CELERY_WORKERS=4
CELERY_CONCURRENCY=2

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100
