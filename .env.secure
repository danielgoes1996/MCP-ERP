# =============================================================
# CONFIGURACIÓN SEGURA DEL MÓDULO INVOICING AGENT
# =============================================================
# IMPORTANTE: Este archivo contiene placeholders seguros.
# Las credenciales reales deben configurarse por separado.

# Configuración del servidor
HOST=127.0.0.1
PORT=8000
DEBUG=true

# Configuración de Odoo - USAR VARIABLES DE ENTORNO O VAULT
ODOO_URL=REPLACE_WITH_ODOO_URL
ODOO_DB=REPLACE_WITH_ODOO_DB
ODOO_USERNAME=REPLACE_WITH_ODOO_USERNAME
ODOO_PASSWORD=REPLACE_WITH_ODOO_PASSWORD

# OpenAI Configuration - ROTAR INMEDIATAMENTE LA KEY EXPUESTA
OPENAI_API_KEY=REPLACE_WITH_NEW_OPENAI_API_KEY

# Google Vision API - ROTAR INMEDIATAMENTE LA KEY EXPUESTA
GOOGLE_API_KEY=REPLACE_WITH_NEW_GOOGLE_API_KEY
OCR_BACKEND=google

# Configuración de ERP genérico
ERP_API_URL=https://your-erp-api.com
ERP_API_KEY=your_api_key
ERP_API_SECRET=your_api_secret

# Configuración bancaria
BANK_API_URL=https://bank-api.com
BANK_API_KEY=your_bank_api_key
BANK_CERT_PATH=/path/to/certificate.pem

# Datos fiscales de la empresa
COMPANY_RFC=REPLACE_WITH_COMPANY_RFC
COMPANY_NAME=REPLACE_WITH_COMPANY_NAME
COMPANY_EMAIL=REPLACE_WITH_COMPANY_EMAIL
COMPANY_PHONE=REPLACE_WITH_COMPANY_PHONE
COMPANY_ZIP=REPLACE_WITH_COMPANY_ZIP

# Configuración de automatización web
WEB_AUTOMATION_HEADLESS=true
WEB_AUTOMATION_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=mcp_server.log

# Timeouts
REQUEST_TIMEOUT=30

# AWS Credentials (si se usa Textract)
AWS_ACCESS_KEY_ID=REPLACE_WITH_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_AWS_SECRET_KEY
AWS_REGION=us-east-1

# Azure Credentials (si se usa Computer Vision)
AZURE_COMPUTER_VISION_KEY=REPLACE_WITH_AZURE_KEY
AZURE_COMPUTER_VISION_ENDPOINT=REPLACE_WITH_AZURE_ENDPOINT

# WhatsApp Configuration
WHATSAPP_API_KEY=REPLACE_WITH_WHATSAPP_API_KEY
WHATSAPP_WEBHOOK_TOKEN=REPLACE_WITH_WEBHOOK_TOKEN