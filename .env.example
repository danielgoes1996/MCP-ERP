# =============================================================
# CONFIGURACIÓN DEL MÓDULO INVOICING AGENT
# =============================================================

# Datos fiscales de la empresa
COMPANY_RFC=XAXX010101000
COMPANY_NAME=Mi Empresa SA de CV
COMPANY_EMAIL=facturacion@miempresa.com
COMPANY_PHONE=5555555555
COMPANY_ZIP=01000

# Credenciales para portales de facturación
INVOICING_EMAIL=usuario@miempresa.com
INVOICING_PASSWORD=password_seguro

# Credenciales específicas por merchant (opcional)
OXXO_USERNAME=mi_usuario_oxxo
OXXO_PASSWORD=password_oxxo

WALMART_USERNAME=mi_usuario_walmart
WALMART_PASSWORD=password_walmart

COSTCO_USERNAME=mi_usuario_costco
COSTCO_PASSWORD=password_costco

HOME_DEPOT_USERNAME=mi_usuario_homedepot
HOME_DEPOT_PASSWORD=password_homedepot

# Configuración de WhatsApp (para webhook)
WHATSAPP_API_KEY=tu_api_key_whatsapp
WHATSAPP_WEBHOOK_TOKEN=token_verificacion_webhook

# Configuración de automatización web
WEB_AUTOMATION_HEADLESS=true
WEB_AUTOMATION_TIMEOUT=30
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver

# Configuración de OCR para extracción de texto de imágenes
OCR_BACKEND=google  # opciones: tesseract, google, amazon

# Google Vision API (RECOMENDADO - más preciso para tickets mexicanos)
# Opción 1: Usar API Key (más fácil)
GOOGLE_API_KEY=tu_google_api_key_aqui

# Opción 2: Usar archivo de credenciales (alternativa)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/google-credentials.json

# Amazon Textract (alternativa cloud)
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_REGION=us-east-1

# Tesseract OCR (gratuito, local)
# No requiere configuración adicional, solo instalación del binario

# =============================================================
# CONFIGURACIÓN GENERAL DEL SERVIDOR
# =============================================================

# Configuración del servidor
HOST=127.0.0.1
PORT=8000
DEBUG=true

# Configuración de Odoo
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_database_name
ODOO_USERNAME=your_odoo_user
ODOO_PASSWORD=your_odoo_password

# OpenAI Configuration for Voice Processing
OPENAI_API_KEY=sk-your-openai-api-key-here

# Configuración de ERP genérico
ERP_API_URL=https://your-erp-api.com
ERP_API_KEY=your_api_key
ERP_API_SECRET=your_api_secret

# Configuración bancaria
BANK_API_URL=https://bank-api.com
BANK_API_KEY=your_bank_api_key
BANK_CERT_PATH=/path/to/certificate.pem

# Logging
LOG_LEVEL=INFO
LOG_FILE=mcp_server.log

# Timeouts
REQUEST_TIMEOUT=30
