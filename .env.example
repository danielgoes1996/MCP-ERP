# Configuración del servidor
HOST=127.0.0.1
PORT=8000
DEBUG=true

# Configuración de Odoo
ODOO_URL=https://your-odoo-instance.com
ODOO_DB=your_database_name
ODOO_USERNAME=your_odoo_user
ODOO_PASSWORD=your_odoo_password

# OpenAI Configuration for Voice Processing
OPENAI_API_KEY=sk-your-openai-api-key-here

# Configuración de ERP genérico
ERP_API_URL=https://your-erp-api.com
ERP_API_KEY=your_api_key
ERP_API_SECRET=your_api_secret

# Configuración bancaria
BANK_API_URL=https://bank-api.com
BANK_API_KEY=your_bank_api_key
BANK_CERT_PATH=/path/to/certificate.pem

# Logging
LOG_LEVEL=INFO
LOG_FILE=mcp_server.log

# Timeouts
REQUEST_TIMEOUT=30
