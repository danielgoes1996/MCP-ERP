# ============================================
# DOCKER COMPOSE CONFIGURATION
# ============================================

# PostgreSQL Database
POSTGRES_DB=mcp_system
POSTGRES_USER=mcp_user
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_PORT=5432

# PgAdmin
PGADMIN_EMAIL=admin@mcp.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis
REDIS_PORT=6379

# API Server
API_PORT=8000
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# ============================================
# APPLICATION CONFIGURATION
# ============================================

# Security - CRITICAL: Change these in production!
JWT_SECRET_KEY=generate-a-secure-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# EXTERNAL SERVICES
# ============================================

# OpenAI Configuration (for voice processing)
